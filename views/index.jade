extends layout

block content
  .list.clearfix
    - if (list && list.length > 0) 
        - each person in list
            .person.clearfix
                h3.title #{person.name}
                p.desc #{person.desc}
                p.email #{person.email}
                - if (person.stat == 'null') 
                    a.check-in(href="/api/checkin/#{person.uid}") 签到
                - else 
                    a.check-in 已签到